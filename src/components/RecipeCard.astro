---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  tags: string[];
  prepTime: string;
}

const { title, description, image, slug, tags, prepTime } = Astro.props;
---

<a href={`/recetas/${slug}`} class="group block bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100">
  <div class="relative h-48 overflow-hidden">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
    />
    <div class="absolute top-2 right-2 bg-brand-yellow text-brand-black text-xs font-bold px-2 py-1 rounded-full">
      {prepTime}
    </div>
  </div>
  <div class="p-5">
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.slice(0, 3).map((tag) => (
        <span class="text-xs font-medium bg-gray-100 text-gray-600 px-2 py-0.5 rounded">
          {tag}
        </span>
      ))}
    </div>
    <h3 class="text-xl font-bold text-brand-black mb-2 group-hover:text-brand-yellow transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 text-sm line-clamp-2">
      {description}
    </p>
  </div>
</a>
